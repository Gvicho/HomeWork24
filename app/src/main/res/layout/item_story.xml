<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/storyFrameWidth"
    android:layout_height="@dimen/storyFrameHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_item_story"
    android:layout_marginEnd="@dimen/storyItemMarginLeft">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/storyFrameTextWidth"
        android:layout_height="wrap_content"
        android:textAppearance="@style/story_title"
        android:text="@string/when_you_wake_up"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/marginLeftText"
        android:layout_marginBottom="@dimen/marginBottomText"/>
</FrameLayout>